function df = ode_v_fb(z,f,r,sigma_G, sigma, B ,A_G, A_B ,delta,theta)
%ODE_V_FB Function to solve for the ODE of the first best value of V
%   write the second order ODE as a system of first-order equations. Define
%   f(1) := V(z) and f(2) := V'(z)

i_G = 1/theta*(f(1)-z*f(2)-1); % optimal i_G
i_B = 1/theta*(f(1)+(1-z)*f(2)-1); % optimal i_B

df = zeros(2,1);    % a column vector; f(1)=p(w) and f(2)=p'(w)
df(1) = f(2);
df(2) = 2/(sigma_G^2+sigma_B^2);

end

